list_numbers = input("Write a list of numbers separated by spaces: ")

list_numbers = list_numbers.split()

def turn_into_int(x):
  return int(x)

list_int = list(map(turn_into_int, list_numbers))

print(list_int)

---

# Same thing with a lambda function:

list_numbers = input("Write a list of numbers separated by spaces: ")

list_numbers = list_numbers.split()

print(list(map(lambda x: int(x) , list_numbers)))

