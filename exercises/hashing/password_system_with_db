import mysql.connector

mydb = mysql.connector.connect(
  host="localhost",
  user="yourusername",
  password="yourpassword"
)

mycursor = mydb.cursor()

mycursor.execute("CREATE DATABASE my_db")

---

import mysql.connector

my_db = mysql.connector.connect(
  host="localhost",
  user="yourusername",
  password="yourpassword",
  database="my_db"
)

if my_db.is_connected():
    print("Connection Successfully")

my_cursor = my_db.cursor()

my_cursor.execute("CREATE TABLE IF NOT EXISTS user_password (user VARCHAR(255), hash_salted_password VARCHAR(255), salt VARCHAR(255))")

print("Table 'user_password' created successfully.")

---

def menu():
  while True:
    choice = input("Would you like to: \n 1 Sign up \n 2 log in \n 3 exit \n 1/2/3: ").strip()
    if choice == "1":
        sign_up()
        break
    elif choice == "2":
        log_in()
        break
    elif choice == "3":
        exit()
    else:
        print("Invalid value. Please input 1, 2 or 3.")
        continue

def sign_up():
    print("Sign up")

def log_in():
    print("Log in")

while True:
    menu()
