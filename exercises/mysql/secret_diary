    print("Connection Successfully")

my_cursor.execute("CREATE TABLE IF NOT EXISTS secret_diary (id INT AUTO_INCREMENT PRIMARY KEY, timestamp VARCHAR(30), entries VARCHAR(280))")

print("Table 'user_password' created successfully.")

def menu():
    while True:
        choice = input("Would you like to: \n 1 Write a new entry \n 2 Read past entries \n 3 Exit \n 1/2/3: ")
        if choice == "1":
            new_entry()
        elif choice == "2":
            read_entries()
        elif choice == "3":
            exit()
        else:
            print("Invalid value. You must pick 1, 2 or 3. Try again.")

