f = open("inventory.txt", "w")
f.close()

def add_item():
  f = open("inventory.txt", "r")
  inventory = f.read()
  inventory = inventory.split("\n")
  f.close()
  
  item = input("What item would you like to add?: ").capitalize()
  inventory.append(item)
  
  f = open("inventory.txt", "w")
  for i in inventory:
    f.write(i + "\n")
  f.close()
  print(item, "added.")

def remove_item():
  f = open("inventory.txt", "r")
  inventory = f.read()
  inventory = inventory.split("\n")
  f.close()

  item = input("What item would you like to remove?: ")
  if item in inventory:
    item_index = inventory.index(item)
    inventory.pop(item_index)
    print(item.capitalize(), "removed.")
  else:
    print("Item not found in the inventory")

  f = open("inventory.txt", "w")
  for i in inventory:
    f.write(i + "\n")
  f.close()

def view_items():
  f = open("inventory.txt", "r")
  inventory = f.read()
  inventory = inventory.split("\n")
  f.close()

  counted_items = []
  for item in inventory:
    if item not in counted_items:
      number = inventory.count(item)
      print(item, ":", number)
      counted_items.append(item)
  print(counted_items)


while True:
  while True:
  try:
    choice = int(input("Would you like to \n 1 Add item \n 2 Remove item \n 3 View items? \n 1/2/3: "))
    break
  else:
    print("Invalid value. Try again.")

  while choice != 1 and choice != 2 and choice != 3:
    choice = int(input("Invalid value. Would you like to \n 1 Add item \n 2 Remove item \n 3 View items? \n 1/2/3:"))

  if choice == 1:
    add_item()
  elif choice == 2:
    remove_item()
  else:
    view_items()
